PCM.Icons = (function() {
  function icon(fileName) {
    return new L.Icon({
      iconUrl: '<%= ENV['SITE_URL'] %>/images/' + fileName,
      shadowUrl: '<%= ENV['SITE_URL'] %>/images/marker-shadow.png',
      iconSize: [25, 41],
      iconAnchor: [12, 41],
      popupAnchor: [1, -34],
      shadowSize: [41, 41]
    });
  }

  return {
    busIcon: function() { return icon('pcm2017-map-pin-bus.png'); },
    groupIcon: function() { return icon('pcm2017-map-pin-group.png'); },
    marchIcon: function() { return icon('pcm2017-map-pin-march.png'); }
  }
})();
